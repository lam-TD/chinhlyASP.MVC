    <!-- Modal doi mat khau -->
    <div class="modal fade" id="doimatkhau" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <form action="" name="">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Đổi mật khẩu</h4>
                    </div>

                    <div class="modal-body" style="min-height: 163px;">
                        <div class="collapse in">
                            <div class="form-group col-md-12" >
                                <label for="" class="col-sm-3 control-label no-padding-right">Mật khẩu cũ:</label>
                                <div class="col-sm-9" id="divmkcu">
                                    <input type="password" id="txtmkcu" name="txtmkcu" class="form-control" placeholder="Mật khẩu cũ">
                                    <span class="hidden-span" style="color:red;" id="err_mkcuNull">Mật khẩu cũ không được để trống</span>
                                    <span class="hidden-span" style="color:red;" id="err_mkcuK">Mật khẩu cũ không trùng khớp</span>
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="" class="col-sm-3 control-label no-padding-right">Mật khẩu mới: </label>
                                <div class="col-sm-9">
                                    <input type="password" name="txtmoi" class="form-control" placeholder="Mật khẩu mới" pattern="[a-z]{1,15}">
                                    <span class="hidden-span" style="color:red;" id="err_mkmoicu">Mật khẩu mới và mật khẩu cũ không được trùng khớp</span>
                                    <span class="hidden-span" style="color:red;" id="err_mkmoi">Mật khẩu phải có độ dài từ 6 - 20 ký tự, không chức ký tự đặc biệt</span>
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="" class="col-sm-3 control-label no-padding-right">Xác nhận mật khẩu:</label>
                                <div class="col-sm-9">
                                    <input type="password" name="txtxacnhan" class="form-control" placeholder="Xác nhận mật khẩu">
                                    <span class="hidden-span" style="color:red;" id="err_xacnhan">Xác nhận mật khẩu không trùng khớp</span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button style="width:150px;" type="button" id="btncapnhatmatkhau" class="btn btn-primary" data-toggle="modal"><i class="fa fa-save"></i>Lưu</button>

                        <button type="button" class="btn btn-warning" data-dismiss="modal"><i class="glyphicon glyphicon-log-in"></i>Thoát</button>
                    </div>
                </form>
            </div>
        </div>
