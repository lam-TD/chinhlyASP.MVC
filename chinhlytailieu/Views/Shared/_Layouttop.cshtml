                            <div class="form-group col-md-12">
                                <label for="" class="col-sm-3 control-label no-padding-right">Tên đăng nhập: </label>
                                <div class="col-sm-9">
                                    <input type="text" name="txttaikhoan" class="form-control" placeholder="Tài khoản" readonly>
                                    <span class="hidden-span" style="color:red;">Tên đăng nhập không được để trống</span>
                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                <label for="" class="col-sm-3 control-label no-padding-right">Họ tên: </label>
                                <div class="col-sm-5">
                                    <input type="text" name="txtholot" class="form-control" placeholder="Họ tên lót">
                                    <span class="hidden-span" style="color:red;" >Họ tên không được để trống</span>
                                </div>
                                <div class="col-sm-4">
                                    <input type="text" name="txtten" class="form-control" placeholder="Tên">
                                    <span class="hidden-span" style="color:red;" >Tên không được để trống</span>
                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                <label for="" class="col-sm-3 control-label no-padding-right">Email: </label>
                                <div class="col-sm-9" id="div-email">
                                    <input type="email" name="txtemail2" class="form-control" placeholder="Email" required id="email">
                                    <span class="hidden-span" style="color:red;" id="errEmail">Email không hợp lệ</span>
                                    <span class="hidden-span" style="color:red;" id="errEmailTontai">Email đã tồn tại</span>
